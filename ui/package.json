{
  "name": "@thestarweb/ui",
  "version": "1.0.6",
  "description": "A UI lib",
  "scripts": {
    "build": "vue-cli-service build --target lib --name star-ui --dest dist/ src/main.ts",
    "tsc": "node ./build-ts/main.js&&tsc ./out/main.ts -declaration -declarationDir ./types -lib DOM,ES2020,DOM.Iterable,ScriptHost --target ES5 --experimentalDecorators"
  },
  "author": "star_ss",
  "bugs": {
    "url": "https://github.com/thestarweb/star-ui/issues"
  },
  "homepage": "https://ui.thestarweb.cn",
  "keywords": [
    "UI",
    "Vue",
    "Vue3",
    "TypeScript"
  ],
  "license": "MIT",
  "main": "dist/star-ui.umd.min.js",
  "types": "types/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thestarweb/star-ui.git"
  },
  "files":[
    "src",
    "dist",
    "types",
    "build-ts"
  ],
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^3.0.0",
    "vue-class-component": "^8.0.0-0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "typescript": "~4.1.5",
    "vue-property-decorator": "^10.0.0-rc.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-debugger": "off"
    }
  },
  "browserslist": [
    "Chrome >= 60",
    "Firefox >= 54",
    "Edge >= 15",
    "Safari >= 10.1",
    "iOS >= 10.3"
  ]
}
